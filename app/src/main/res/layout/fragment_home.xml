<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="@dimen/parent_layout_padding"
    tools:context=".Fragment.HomeFrag">

    <androidx.cardview.widget.CardView
        app:cardCornerRadius="@dimen/size_12"
        app:cardElevation="@dimen/size_2"
        app:cardUseCompatPadding="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:background="@drawable/bg_card_balance"
            android:padding="@dimen/padding_8"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textColor="@color/white"
                android:textSize="@dimen/size_24"
                android:text="@string/balance"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <LinearLayout

                android:weightSum="3.2"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/amountBal"
                    android:textColor="@color/white"
                    android:text="@string/rs"
                    android:layout_width="0sp"
                    android:layout_weight="2"
                    android:layout_height="wrap_content" />
                <TextView
                    android:drawableTint="@color/white"
                    android:drawablePadding="@dimen/padding_4"
                    android:drawableRight="@drawable/ic_credit_card_black_24dp"
                    android:id="@+id/addMoney"
                    android:background="@drawable/chip_primary"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:layout_weight="1.2"
                    android:text="@string/add"
                    android:layout_width="0sp"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>