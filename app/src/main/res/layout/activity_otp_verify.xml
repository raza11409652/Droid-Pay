<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".OtpVerify">
    <androidx.appcompat.widget.Toolbar
        android:textAlignment="center"
        android:id="@+id/toolbar"
        android:minHeight="?attr/actionBarSize"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:titleTextColor="@android:color/white"
        android:background="?attr/colorPrimary"
        />

       <LinearLayout
           android:orientation="vertical"
           android:padding="@dimen/parent_layout_padding"
           android:layout_width="match_parent"
           android:layout_height="wrap_content">
         <androidx.cardview.widget.CardView
             app:cardUseCompatPadding="true"
             android:clipToPadding="true"
             android:layout_width="match_parent"
             android:layout_height="wrap_content">
             <TextView
                 android:textAppearance="@style/TextAppearance.AppCompat.Small"
                 android:textColor="@color/black"
                 android:background="@drawable/chip_primary"
                 android:id="@+id/otpEnterTxt"
                 android:text="@string/enterotp"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content" />
         </androidx.cardview.widget.CardView>
           <EditText
               android:id="@+id/otpEdtBox"
               android:inputType="number"
               android:hint="99999"
               android:textAlignment="center"
               android:layout_marginTop="@dimen/margin_top"
               android:background="@drawable/bg_input"
               android:layout_width="match_parent"
               android:layout_height="wrap_content" />
           <Button
               android:layout_marginBottom="@dimen/margin_top"
               android:id="@+id/otpVerifyBtn"
               android:text="@string/verify"
               android:textColor="@color/white"
               android:background="@drawable/red_btn"
               android:layout_marginTop="@dimen/size_32"
               android:layout_width="match_parent"
               android:layout_height="wrap_content" />
       </LinearLayout>

</LinearLayout>