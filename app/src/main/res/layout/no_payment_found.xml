<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:visibility="gone"
    android:id="@+id/noTransactionFoundLayout"
    android:layout_height="fill_parent">
      <RelativeLayout
          android:layout_width="match_parent"
          android:layout_height="match_parent">
          <ImageView
              android:id="@+id/imgNoPayment"
              android:layout_centerInParent="true"
              android:layout_width="120sp"
              android:layout_height="120sp"
              android:src="@drawable/no_payment"
              />
          <TextView
              android:id="@+id/noPayText"
              android:layout_marginTop="@dimen/margin_top"
              android:layout_below="@id/imgNoPayment"
              android:textColor="@color/black"
              android:textStyle="bold"
              android:text="@string/no_payment"
              android:textAlignment="center"
              android:layout_width="match_parent"
              android:layout_height="wrap_content" />
          <TextView
              android:id="@+id/date"
              android:text="01/02/2019"
              android:background="@drawable/chip_grey"
              android:layout_marginTop="@dimen/size_6"
              android:layout_centerHorizontal="true"
              android:layout_below="@+id/noPayText"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content" />
      </RelativeLayout>

</LinearLayout>