<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".TrnasferSuccess">
    <RelativeLayout
        android:background="@drawable/bg_pay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/successImg"
            android:layout_centerInParent="true"
            android:layout_width="120sp"
            android:layout_height="120sp"
            android:src="@drawable/tick"/>
    </RelativeLayout>
    <LinearLayout
        android:orientation="vertical"
        android:padding="@dimen/parent_layout_padding"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:weightSum="3"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/receiver"
                android:textSize="@dimen/size_18"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_weight="2"
                android:text="@string/added_from"
                android:layout_width="0sp"
                android:layout_height="wrap_content" />
            <TextView
                android:drawableTint="@color/success_green"
                android:drawableStart="@drawable/inr"
                android:id="@+id/amountTransfer"
                android:textSize="@dimen/size_18"
                android:textColor="@color/success_green"
                android:textStyle="bold"
                android:text="100"
                android:layout_weight="1"
                android:layout_width="0sp"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <TextView
            android:layout_marginTop="@dimen/size_32"
            android:text="@string/moneyTransferFrom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_marginTop="@dimen/size_6"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="@dimen/size_18"
            android:text="@string/upiId"
            android:id="@+id/sender"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_marginTop="@dimen/size_12"
            android:text="ref"
            android:id="@+id/ref"
            android:textSize="@dimen/size_12"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/orderID"
            android:layout_marginTop="@dimen/size_4"
            android:text="order id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/date"
            android:layout_marginTop="@dimen/size_4"
            android:text="date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:padding="@dimen/zero"
        android:background="@color/white"
        android:layout_marginTop="@dimen/margin_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:padding="@dimen/padding_12"
            android:layout_marginTop="@dimen/size_28"
            android:id="@+id/updatedBalance"
            android:text="updated balance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <View
            android:layout_marginTop="@dimen/padding_8"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#c0c0c0"/>
        <LinearLayout
            android:orientation="vertical"
            android:padding="@dimen/padding_8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/addMoney"
                android:drawablePadding="@dimen/padding_8"
                android:textAlignment="textStart"
                android:text="@string/add"
                android:textColor="@color/success_green_back"
                android:theme="@style/WhiteFlatButton"
                android:drawableLeft="@drawable/addmoney"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <Button
                android:id="@+id/passbook"
                android:drawablePadding="@dimen/padding_8"
                android:textAlignment="textStart"
                android:text="@string/passbok"
                android:textColor="@color/success_green_back"
                android:theme="@style/WhiteFlatButton"
                android:drawableLeft="@drawable/passbook"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <Button
                android:id="@+id/home"
                android:drawablePadding="@dimen/padding_8"
                android:textAlignment="textStart"
                android:text="@string/home"
                android:textColor="@color/success_green_back"
                android:theme="@style/WhiteFlatButton"
                android:drawableLeft="@drawable/homep"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>